alias python=python3

# Vim
alias vim='/usr/bin/vim'
alias vv='/usr/bin/vim --version'

# Unix
alias tlf="tail -f"
alias ln="ln -v"
alias md="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL" alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias l="ls -lF"
alias ll="ls -alhF"
alias lt="ls -alhtF"
alias ld="ls -alhd */"

# Git
alias g='git'
for command in a aa au \
               b \
               c ca cam co cp cpnx \
               d ds dw \
               f \
               g ga \
               l lr \
               m \
               o \
               p \
               pf \
               r ra rc ri \
               s \
               t ta tc td tl tp \
               u us \
               w wp
do
    alias "g$command"="g $command"
done

# tmux
alias ta='tmux attach -t'
alias tn='tmux new-sessoin'
alias tl='tmux list-sessions'
alias tk='tmux kill-server'

# ripgrep
alias rgf='rg --files | rg'

# Go
alias go='/usr/local/go/bin/go'

# K6
alias xk6='$HOME/go/bin/xk6'

# Vagrant
alias vup="vagrant up"
alias vupno="vagrant up --no-provision"
alias vhalt="vagrant halt"
alias vdes="vagrant destroy -f"
alias vssh="vagrant ssh"

# Toggle proxy
alias proxy="toggle_proxy"
