alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias l="ls -lF"
alias ll="ls -alhF"
alias lt="ls -alhtF"
alias ld="ls -alhd */"
alias grep="GREP_COLOR='1;37;44' LANG=C grep --color=auto"
alias md="mkdir -p"

# bundler
alias be="bundle exec"
alias bi="bundle install"
alias bu="bundle update"
alias bo="bundle open"

#vagrant
alias vup="vagrant up"
alias vupno="vagrant up --no-provision"
alias vhalt="vagrant halt"
alias vdes="vagrant destroy -f"
alias vssh="vagrant ssh"

# rails
alias r="rails"

#webpack
alias wp="./bin/webpack-dev-server"

# git
alias g='git'
for command in a aa au \
               b \
               c ca cam co cp cpnx \
               d ds dw \
               f \
               g ga \
               l lr \
               m \
               o \
               p \
               pf \
               r ra rc ri \
               s \
               t ta tc td tl tp \
               u us \
               w wp
do
    alias "g$command"="g $command"
done

if [ -f ~/.git-completion.bash ]; then
  . ~/.git-completion.bash
fi

#if [ -f $(brew --prefix)/etc/bash_completion ]; then
#  . $(brew --prefix)/etc/bash_completion
#fi

# vim
alias vim='/usr/bin/vim'

# stty start undef stop undef
ctags_current_path=$(which ctags)
if [ $ctags_current_path == "/usr/bin/ctags" ]
then
  alias ctags='/usr/bin/ctags'
else
  alias ctags='/usr/local/bin/ctags'
fi
